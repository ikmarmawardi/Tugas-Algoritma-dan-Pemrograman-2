No. 6) Buatlah program dalam bahasa c++ yang menerapkan metode pencarian beruntun.

#include <iostream>
#include <string>
using namespace std;
int main()
{
   int myarray[10] = {20,42,22,53,74,12,4,7,24,11};  
    int key,loc;
    cout<<"Array :"<<endl;
    for(int i=0;i<10;i++){
        cout<<myarray[i]<<" ";
    }
    cout<<endl;
    cout<<"Masukkan Angka Yang Ingin Dicari : "; cin>>key;
    for (int i = 0; i< 10; i++)  
    {  
        if(myarray[i] == key)   
        {  
            loc = i+1;
            break;  
        }   
        else  
        loc = 0;  
    }   
    if(loc != 0)  
    {  
        cout<<"Ditemukan pada bagian index ke "<<loc<<" dalam array";  
    }  
    else 
    {  
        cout<<"Tidak ditemukan";  
    }  
   
}


No. 9) Buatlah program dalam bahasa c++ yang menerapkan metode pencarian bagi dua.

#include <iostream>
#include <string>
using namespace std;

int binarySearch(int thearray[], int first, int end, int door)  
{  
    int test;  
    if(end >= first) {     
        test = (first + end)/2;  
        if(thearray[test] == door)  
        {  
            return test+1;  
        }  
        else if(thearray[test] < door) {  
            return binarySearch(thearray,test+1,end,door);  
        }  
        else {  
            return binarySearch(thearray,first,test-1,door);  
        }  
    }  
    return -1;   
}   
int main ()  
{  
    int thearray[10] = {4,9,11,14,20,24,29,46,53,73};  
    int door, location=-1;   
    cout<<"Urutan Array :"<<endl;
    for(int i=0;i<10;i++){
        cout<<thearray[i]<<" ";
    }
    cout<<endl;
    cout<<"Masukkan kata kunci yang ingin dicari:"; cin>>door;  
    location = binarySearch(thearray, 0, 9, door);  
    if(location != -1)  {  
        cout<<"Kata kunci ditemukan pada index - "<<location; 
    }  
    else   {  
        cout<<"Tidak ditemukan";
    }  
}
